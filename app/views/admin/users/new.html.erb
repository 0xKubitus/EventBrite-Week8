Ajouter un User :

 <%= form_tag url_for(action: 'create') do %>
  <div class="row">

    <div class="col-sm-4">
      <h5><%= label_tag 'Prénom' %></h5>
      <%= text_field_tag 'first_name', @user_to_add.first_name, class: "form-control"  %>

      <h5><%= label_tag 'Nom' %></h5>
      <%= text_field_tag 'last_name', @user_to_add.last_name, class: "form-control"  %>

      <h5><%= label_tag 'Email' %></h5>
      <%= text_field_tag 'email', @user_to_add.email, class: "form-control"  %>

      <h5><%= label_tag 'Mot de passe' %></h5>
      <%= password_field_tag 'password', @user_to_add.password, class: "form-control"  %>

      <h5><%= label_tag 'Description' %></h5> 
      <%= text_area_tag 'description', @user_to_add.description, class: "form-control"  %>
    </div>

    <div class="col-sm-4">
      <h5><%= label_tag 'ACCÈS ADMIN' %></h5>
      <%= radio_button_tag 'is_app_admin', '1' %>
      <h5><%= label_tag 'ACCÈS USER' %></h5>
      <%= radio_button_tag 'is_app_admin', '0' %>

      <%= submit_tag "OK" %>
    </div>

  </div>
<% end %>